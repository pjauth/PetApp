<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/blackCoral">

    <ImageView
        android:id = "@+id/sitter_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/profile_pic" />
    <TextView
        android:id = "@+id/sitter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/sitter_pic"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text = "Name of Sitter"
        android:textColor="@color/antiqueBrass"
        android:background = "@color/oxfordBlue"
        android:padding="10dp"
        />

    <TextView
        android:id = "@+id/sitter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/sitter_name"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text = "Name of Phone Number"
        android:textColor="@color/antiqueBrass"
        android:background = "@color/oxfordBlue"
        android:padding="10dp"
        />

    <TextView
        android:id = "@+id/sitter_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/sitter_phone_number"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text = "Number of Points the Sitter has"
        android:textColor="@color/antiqueBrass"
        android:background = "@color/oxfordBlue"
        android:padding="10dp"
        />
    <TextView
        android:id = "@+id/other_stuff1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/sitter_points"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text = "Other Stuff"
        android:textColor="@color/antiqueBrass"
        android:background = "@color/oxfordBlue"
        android:padding="10dp"
        />

    <TextView
        android:id = "@+id/other_stuff2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/other_stuff1"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text = "Other Stuff"
        android:textColor="@color/antiqueBrass"
        android:background = "@color/oxfordBlue"
        android:padding="10dp"
        />

</RelativeLayout>